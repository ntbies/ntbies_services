<odoo>
  <record id="view_ntbies_config_settings" model="ir.ui.view">
    <field name="name">ntbies.config.settings.view.form</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
    <field name="arch" type="xml">
      <xpath expr="//div[hasclass('settings')]" position="inside">
        <div
          class="app_settings_block"
          data-string="NTBIES_Services"
          id="ntbies_services"
          data-key="ntbies_services"
          string="NTBIES Services"
        >
          <h2>Access</h2>
          <div
            class="row mt16 o_settings_container"
            name="ntbies_document_extraction_configuration"
          >
            <div class="col-12 col-lg-6 o_setting_box">
              <div class="o_setting_left_pane" />
              <div class="o_setting_right_pane">
                <span class="o_form_label">Access Key</span>
                <a
                  href="https://platform.ntbies.com"
                  title="Documentation"
                  class="o_doc_link"
                  target="_blank"
                />
                <div class="text-muted">
                                Allows you to access processing services provided by NTBIES.
                            </div>
                <div class="text-muted">
                  <field name="ntbies_access_key" password="True" />
                </div>
              </div>
            </div>
          </div>
          <h2>Document Extraction</h2>
          <div
            class="row mt16 o_settings_container"
            name="ntbies_document_extraction_configuration"
          >
            <div class="col-12 col-lg-6 o_setting_box" id="ntbies_document_extraction">
              <div class="o_setting_left_pane">
                <field name="enable_auto_extraction" />
              </div>
              <div class="o_setting_right_pane">
                <label for="enable_auto_extraction" />
                <div class="text-muted">
                               Check this field to enable automatic document data extraction
                           </div>
              </div>
            </div>
          </div>
        </div>
      </xpath>
    </field>
  </record>
</odoo>
